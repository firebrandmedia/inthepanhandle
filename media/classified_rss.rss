{assign_variable:master_weblog_name="classifieds"}
{exp:rss:feed weblog="{master_weblog_name}"}

<?xml version="1.0" encoding="{encoding}"?>
<rss version="2.0"
    xmlns:dc="http://purl.org/dc/elements/1.1/"
    xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
    xmlns:admin="http://webns.net/mvcb/"
    xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
    xmlns:content="http://purl.org/rss/1.0/modules/content/">

    <channel>

    <title>{exp:xml_encode}InThePanhandle.com Classifieds{/exp:xml_encode}</title>
    <link>{path='SITE_INDEX'}/classifieds/</link>
    <description>New Classified Listings on InThePanhandle.com</description>
    <dc:language>{weblog_language}</dc:language>
    <dc:creator>{email}</dc:creator>
    <dc:rights>Copyright {gmt_date format="%Y"}</dc:rights>
    <dc:date>{gmt_date format="%Y-%m-%dT%H:%i:%s%Q"}</dc:date>
    <admin:generatorAgent rdf:resource="http://expressionengine.com/" />

{exp:weblog:entries weblog="{master_weblog_name}" limit="10" rdf="off" dynamic_start="on" disable="member_data|trackbacks"}
    <item>
      <title>{exp:xml_encode}{title} ${classified_price}{/exp:xml_encode}</title>
      <link>{title_permalink=classifieds/listing}</link>
      <guid>{title_permalink=classifieds/listing}</guid>
      <description>{exp:xml_encode}{classified_description} | {classified_contact} | {contact_info} | {classified_price}{/exp:xml_encode}</description>
      <dc:subject>{exp:xml_encode}{categories backspace="1"} Price: ${category_name}, {/categories}{/exp:xml_encode}</dc:subject>
      <dc:date>{gmt_entry_date format="%Y-%m-%dT%H:%i:15%Q"}</dc:date>
    </item>
{/exp:weblog:entries}

    </channel>
</rss>

{/exp:rss:feed}
