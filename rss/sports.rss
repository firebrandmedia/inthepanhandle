{assign_variable:master_weblog_name="news"}
{exp:rss:feed weblog="{master_weblog_name}"}

<?xml version="1.0" encoding="{encoding}"?>
<rss version="2.0"
    xmlns:dc="http://purl.org/dc/elements/1.1/">

    <channel>

    <title>{exp:xml_encode}InThePanhandle.com Sports News{/exp:xml_encode}</title>
    <link>{path='SITE_INDEX'}/news/</link>
    <description>Local sports news from InThePanhandle.com</description>
    <dc:language>{weblog_language}</dc:language>
    <dc:creator>{email}</dc:creator>
    <dc:rights>Copyright {gmt_date format="%Y"}</dc:rights>
    <dc:date>{gmt_date format="%Y-%m-%dT%H:%i:%s%Q"}</dc:date>

{exp:weblog:entries weblog="{master_weblog_name}" category="295" limit="15" rdf="off" dynamic_start="on" disable="member_data|trackbacks"}
    <item>
      <title>{exp:xml_encode protect_entities="yes"}{title}{/exp:xml_encode}</title>
      <link>{title_permalink=news/article}</link>
      <guid>{title_permalink=news/article}</guid>
      <description><![CDATA[
<span style="font-family: Arial,helvetica,sans-serif;">
{article_images}{if article_image}<img class="article_image_thumbnail" src="{article_image}" border="0" alt="image">{/if}{/article_images}
{body}
</span>
]]></description>
      <dc:subject>{exp:xml_encode}{categories backspace="1"}{category_name}, {/categories}{/exp:xml_encode}</dc:subject>
      <dc:date>{gmt_entry_date format="%Y-%m-%dT%H:%i:15%Q"}</dc:date>
    </item>
{/exp:weblog:entries}

    </channel>
</rss>

{/exp:rss:feed}
